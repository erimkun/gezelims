# AI Provider Seçimi
# Desteklenen: ollama, openai, anthropic, google, openrouter, vscode-copilot
AI_PROVIDER=google

# Ollama Ayarları (Yerel Model)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# OpenAI Ayarları
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Anthropic (Claude) Ayarları
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google (Gemini) Ayarları
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-1.5-flash

# OpenRouter Ayarları (Tüm modellere tek API ile erişim)
# https://openrouter.ai/docs
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free
# Diğer önerilen modeller:
# - meta-llama/llama-3.1-8b-instruct:free
# - mistralai/mistral-7b-instruct:free
# - anthropic/claude-3.5-sonnet
# - openai/gpt-4o-mini

# VSCode GitHub Copilot Ayarları
# VSCode'da GitHub Copilot extension yüklü olmalı
VSCODE_COPILOT_ENABLED=false
VSCODE_COPILOT_MODEL=gpt-4

# İşleme Ayarları
BATCH_SIZE=10
DELAY_MS=1000

# Dosya Yolları
INPUT_DIR=../pearl_of_the_istanbul/public/data
OUTPUT_DIR=./output
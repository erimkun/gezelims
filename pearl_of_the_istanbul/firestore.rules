rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rotalar koleksiyonu kuralları
    match /routes/{routeId} {
      // Herkes rotaları okuyabilir (Popüler rotalar listesi için gerekli)
      allow read: if true;
      
      // Sadece giriş yapmış kullanıcılar yeni rota oluşturabilir
      // Ve oluşturulan rotanın userId alanı, kullanıcının kendi ID'si olmalıdır
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Sadece rota sahibi rotasını güncelleyebilir veya silebilir
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Yorumlar alt koleksiyonu
      match /comments/{commentId} {
        // Herkes yorumları okuyabilir
        allow read: if true;
        
        // Giriş yapmış kullanıcılar yorum yapabilir
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        
        // Sadece yorum sahibi silebilir
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }
    
    // Diğer koleksiyonlar için varsayılan kural (Gerekirse açabilirsiniz)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
